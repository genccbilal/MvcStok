@using MvcStok.Models.Entity
@model List<TBLURUNLER>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>Ürün Id</th>
        <th>Ürün Ad</th>
        <th>Markası</th>
        <th>Kategori</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var urn in Model)
        {
        <tr>
            <th>@urn.URUNID</th>
            <td>@urn.URUNAD</td>
            <td>@urn.MARKA</td>
            <td>@urn.URUNKATEGORI</td>
            <td>@urn.FIYAT</td>
            <td>@urn.STOK</td>
            <td><a href="/Urun/Sil/@urn.URUNID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/Guncelle/@urn.URUNID" class="btn btn-success">Güncelle</a></td>
        </tr>
        }

    </tbody>

</table>
<a href="/Urun/UrunEkle/" class="btn btn-primary">Yeni Ürün Ekle</a>
