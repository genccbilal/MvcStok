@model MvcStok.Models.Entity.TBLSATISLAR

@{
    ViewBag.Title = "Satış İşlemleri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Satış İşlemleri</h2>

<!-- Yeni Satış Ekle Butonu -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#satisModal">
    Yeni Satış Yap
</button>

<!-- Satış Listele Butonu -->
<a href="@Url.Action("SatisListesi", "Satis")" class="btn btn-success">Satış Listesi</a>

<!-- Modal (Popup) -->
<div class="modal fade" id="satisModal" tabindex="-1" role="dialog" aria-labelledby="satisModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yeni Satış Ekle</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("YeniSatis", "Satis", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("Ürün Adı")
                        @Html.DropDownList("URUN", new SelectList(ViewBag.Urunler, "URUNID", "URUNAD"), "-- Seçiniz --", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Ürün Markası")
                        @Html.DropDownList("KATEGORİ", new SelectList(ViewBag.Kategoriler, "KATEGORIID", "KATEGORIAD"), "-- Seçiniz --", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Müşteri Adı Soyadı")
                        @Html.DropDownList("MUSTERI", new SelectList(ViewBag.Musteriler, "MUSTERIID", "MUSTERIAD"), "-- Seçiniz --", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Adet")
                        @Html.TextBox("ADET", null, new { @class = "form-control", type = "number", min = "1" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Fiyat")
                        @Html.TextBox("FIYAT", null, new { @class = "form-control", type = "number", step = "0.01" })
                    </div>

                    <button type="submit" class="btn btn-primary">Satışı Kaydet</button>
                }
            </div>
        </div>
    </div>
</div>

<!-- Gerekli JS Kütüphaneleri -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


